<div class="card">
    <h1 class="card-header">{{ title }}</h1>
    <div class="card-body">
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="row">
            <div class="col">
                <div class="form-group">
                    {{ form_row(form.firstname) }}
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    {{ form_row(form.lastname) }}
                </div>
            </div>
        </div>
        <div class="form-group">
            {{ form_row(form.email) }}
        </div>
        <div class="row">
            <div class="col">
                <div class="form-group">
                    {{ form_row(form.password.first) }}
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    {{ form_row(form.password.second) }}
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Valider</button>
        {{ form_end(form) }}
    </div>
</div>