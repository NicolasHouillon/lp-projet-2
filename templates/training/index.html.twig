{% extends 'base.html.twig' %}

{% block title %}Sujet {{ sujet }}{% endblock %}

{% block body %}

    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2>Choix d'un exercice du sujet {{ sujet }}</h2>
            <select name="exercice" id="" class="custom-select">
                {% for key, value in exercices %}
                    <optgroup label="{{ key }}">
                        {% for exercice in value.questions %}
                            <option value="{{ exercice }}">{{ exercice }}</option>
                        {% endfor %}
                    </optgroup>
                {% endfor %}
            </select>
        </div>
        <div>
            <button class="btn btn-secondary" id="export">Exporter</button>
            <button class="btn btn-secondary" id="import">Importer</button>
            <a class="btn btn-primary" href="{{ path('home')}}">Retour à la liste des sujets</a>
        </div>
    </div>


    <h2 class="mt-4">Votre requête</h2>
    <textarea class="form-control" id="request"></textarea>

    {% include 'training/_your-responses.html.twig' %}

    {% include 'training/_requested-responses.html.twig' %}

    {% include 'training/_comments.html.twig' %}

{% endblock %}
