{% extends 'base.html.twig' %}

{% block title %}{{ app_name }} - Accueil{% endblock %}

{% block body %}
    {% if app.user %}
        <h1>Coucou</h1>
    {% else %}
        <div class="card">
            <div class="card-body">
                <h1 class="display-4">Bienvenue inconnu !</h1>
                <p class="lead">
                    {{ app_description }}
                </p>
                <p>
                    Afin de pouvoir utiliser l'application, tu dois créer un compte pour des raisons de sécurité.
                </p>
                <div class="flex">
                    <a href="{{ path('app_login') }}" class="btn btn-primary">Me connecter</a>
                    <a href="{{ path('app_register') }}" class="btn btn-secondary">M'inscrire</a>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
