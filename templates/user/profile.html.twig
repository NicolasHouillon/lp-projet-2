{% extends 'base.html.twig' %}

{% block title %}{{ app_name }} - Mon profil{% endblock %}

{% block body %}
    <div class="row">
        {{ include('user/profile/_menu.html.twig') }}
        <div class="col card">
            <div class="card-header d-flex justify-content-between">
                <h1>Mon profil</h1>
                <a href="{{ path('profile_edit') }}" class="btn btn-primary d-flex align-self-center">Modifier</a>
            </div>
            <div class="card-body">
                <ul>
                    <li>Mon nom : {{ app.user.name }}</li>
                    <li>Mon adresse email : {{ app.user.email }}</li>
                    <li>
                        Mes roles :
                        <ul>
                            {% for role in app.user.roles %}
                                <li>{{ role }}</li>
                            {% endfor %}
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
