{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-3">
            <div class="list-group">
                <button type="button" class="list-group-item list-group-item-action active">Mon profile</button>
                <button type="button" class="list-group-item list-group-item-action">Mon avancement</button>
                <button type="button" class="list-group-item list-group-item-action">Actions</button>
            </div>
        </div>
        <div class="col card">
            <div class="card-header d-flex justify-content-between">
                <h1>Mon profil</h1>
                <a href="" class="btn btn-primary d-flex align-self-center">Modifier</a>
            </div>
            <div class="card-body">
                <ul>
                    <li>Mon nom : {{ app.user.name }}</li>
                    <li>Mon adresse email : {{ app.user.email }}</li>
                    <li>
                        Mes roles :
                        <ul>
                            {% for role in app.user.roles %}
                                <li>{{ role }}</li>
                            {% endfor %}
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
